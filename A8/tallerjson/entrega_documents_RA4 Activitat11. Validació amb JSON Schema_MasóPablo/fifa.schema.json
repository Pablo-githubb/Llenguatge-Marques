{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Plantilla Torneig FIFA",
    "description": "Aquesta Ã©s la plantilla per verificar l'arxiu fifa-egames.json",
    "properties": {
        "Guanyador": {
            "type": "string"
        },
        "Partit": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "object",
                "properties": {
                    "nom-equip": {
                        "type": "string"
                    },
                    "nick-players": {
                        "type": "array",
                        "minItems": 1,
                        "maxItems": 2,
                        "items": {
                            "type": "string"
                        }
                    },
                    "gols": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "marcador": {
                                    "type": "string",
                                    "pattern": "^[0-9]+-[0-9]+$"
                                },
                                "minut": {
                                    "type": "string",
                                    "pattern": "^[0-9]{2}:[0-9]{2}$"
                                },
                                "jugador": {
                                    "type": "string"
                                },
                                "penal": {
                                    "type": "boolean"
                                }
                            },
                            "required": ["marcador", "minut", "jugador"],
                            "additionalProperties": false
                        }
                    },
                    "targetes": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "tipus": {
                                    "type": "string",
                                    "enum": ["groga", "roja"]
                                },
                                "minut": {
                                    "type": "string",
                                    "pattern": "^[0-9]{2}:[0-9]{2}$"
                                },
                                "jugador": {
                                    "type": "string"
                                }
                            },
                            "required": ["tipus", "minut", "jugador"],
                            "additionalProperties": false
                        }
                    }
                },
                "required": ["nom-equip", "nick-players"],
                "additionalProperties": false
            }
        }
    },
    "required": ["Guanyador", "Partit"],
    "additionalProperties": false
}